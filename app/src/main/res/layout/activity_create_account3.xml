<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".CreateAccount3">


    <TextView
        android:id="@+id/finfamily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|top"
        android:text="Create Account"
        android:textAppearance="@style/finfamily"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/cadastronick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/inputemail"
        android:hint="Nickname"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cadastronumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finfamily"
        app:layout_constraintVertical_bias="0.95" />

    <EditText
        android:id="@+id/cadastronumber"
        android:layout_width="244dp"
        android:layout_height="44dp"
        android:background="@drawable/inputnumber"
        android:baselineAligned="false"
        android:hint="Number"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cadastrocdg"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cadastrocdg"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:background="@drawable/inputcdg"
        android:baselineAligned="false"
        android:hint="+55"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cadastronumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <Button
        android:id="@+id/buttonnext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttoncadastro"
        android:text="@string/Next"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastronumber"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/need_help_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:gravity="right|top"
        android:text="@string/need_help_"
        android:textAppearance="@style/need_help_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonnext2" />

    <TextView
        android:id="@+id/textAccessInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access Information"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/cadastronick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finfamily"
        app:layout_constraintVertical_bias="0.217" />


</androidx.constraintlayout.widget.ConstraintLayout>