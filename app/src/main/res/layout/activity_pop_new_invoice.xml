<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    tools:context=".PopNewGroup"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="20dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/New_Invoice"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>


    <Button
        android:id="@+id/newEntry"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btnextract"
        android:backgroundTint="#65E674"
        android:text="@string/New_entry"
        app:backgroundTint="#65E674" />

    <Button
        android:id="@+id/newExit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btnextract"
        android:backgroundTint="#FF1B1B"
        android:layout_marginBottom="20dp"
        android:text="@string/New_expense"
        app:backgroundTint="#FF1B1B" />


</LinearLayout>